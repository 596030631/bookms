<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stbu.bookms">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name_cn"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookManagementSystem">
        <activity
            android:name=".activity.ShopActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ChangeActivity"
            android:exported="false" />
        <activity
            android:name=".activity.FriendsActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ExchangeActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activity.RegisterActivity"
            android:exported="false" />
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.AdminActivity" />
        <activity android:name=".activity.UserActivity" />
        <activity android:name=".activity.ManageUserActivity" />
        <activity android:name=".activity.ManageBookActivity" />
        <activity android:name=".activity.AddUserActivity" />
        <activity android:name=".activity.ViewUserActivity" />
        <activity android:name=".activity.UpdateUserActivity" />
        <activity android:name=".activity.AddBookActivity" />
        <activity android:name=".activity.ViewBookActivity" />
        <activity android:name=".activity.UpdateBookActivity" />
        <activity android:name=".activity.ViewBorrowActivity" />
        <activity android:name=".activity.FindBookActivity" />
        <activity android:name=".activity.BorrowBookActivity" />
        <activity android:name=".activity.UpdatePasswordActivity" />
    </application>

</manifest>