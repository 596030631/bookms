<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/other_backgroup"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".activity.AdminActivity">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"

                      android:layout_weight="1"
                      android:layout_height="0dp">
            <TextView
                    android:id="@+id/tv_admin_welcome"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:text="@string/tv_text_admin_welcome"
                    android:textSize="25sp"/>

            <ImageView android:layout_width="match_parent"
                       android:src="@drawable/admin_shou"
                       android:layout_height="match_parent"/>

        </LinearLayout>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_weight="1"
                      android:layout_height="0dp"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_weight="1"
                          android:layout_height="0dp">
                <Button
                        android:id="@+id/btn_user_info"
                        android:layout_width="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/tv_admin_welcome"
                        android:text="@string/btn_text_user_info"
                        android:textSize="20sp"/>

                <Button
                        android:id="@+id/btn_book_info"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/btn_user_info"
                        android:text="@string/btn_text_book_info"
                        android:textSize="20sp"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_weight="1"
                          android:layout_height="0dp">
                <Button
                        android:id="@+id/btn_book_borrow_info"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/btn_book_info"
                        android:text="@string/btn_text_book_borrow_info"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"/>

                <Button
                        android:id="@+id/btn_logout"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/btn_book_borrow_info"
                        android:text="@string/btn_text_logout"
                        android:layout_marginTop="10dp"
                        android:textSize="20sp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>




</RelativeLayout>
